<form action="/todos/edit/<%= @todo.id %>" method="post" role="form">
    <div class="form-group">
        <label for="textInput">Todo</label>
        <textarea name="text" class="form-control" id="textInput" placeholder="Todo ..." ><%= @todo.text %></textarea>
    </div>
    <div class="checkbox">
        <label>
            <input name="status" type="checkbox" checked="<%= @todo.status %>"> Status
        </label>
    </div>
    <button type="submit" class="btn btn-default">Save</button>
</form>